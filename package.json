{
  "name": "telar-mvc",
  "description": "Lightweight powerful implementation of MVC(Model-View-Controller) for Node servers.",
  "version": "0.0.0-development",
  "license": "MIT",
  "author": "Amir Movahedi <amir.gholzam@live.com>",
  "main": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "scripts": {
    "docs": "./node_modules/.bin/typedoc --out docs --mode file --excludePrivate --excludeExternals ./src/index.ts",
    "test": "mocha -r ts-node/register tests/**/*.test.ts",
    "cov": "nyc mocha",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint:fix": "eslint . --ext .ts --fix",
    "build": "tsc --noEmit false",
    "commit": "git-cz"
  },
  "publishConfig": {
    "access": "public",
    "branches": [
      "master"
    ]
  },
  "pre-commit": [
    "lint"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "{src,__mocks__,bin}/**/*.ts": [
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/prompt"
    }
  },
  "release": {
    "prepare": [
      {
        "path": "@semantic-release/changelog"
      },
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Qolzam/telar-mvc.git"
  },
  "bugs": {
    "url": "https://github.com/Qolzam/telar-mvc/issues"
  },
  "homepage": "https://github.com/Qolzam/telar-mvc#readme",
  "dependencies": {
    "@bluejay/http-method": "3.0.0-beta.0",
    "@bluejay/rest-errors": "4.0.0-beta.0",
    "@bluejay/schema": "3.0.0-beta.0",
    "@bluejay/status-code": "4.0.0-beta.2",
    "@bluejay/url": "3.0.0-beta.3",
    "@bluejay/utils": "4.0.0-beta.3",
    "@types/koa-bodyparser": "^4.3.0",
    "ajv-class-validator": "^1.0.3",
    "lodash.clonedeep": "^4.5.0",
    "lodash.isnil": "^4.0.0",
    "lodash.isnull": "^3.0.0",
    "lodash.isobjectlike": "^4.0.0",
    "lodash.isplainobject": "^4.0.6"
  },
  "peerDependencies": {
    "koa": "^2.13.0",
    "@koa/router": "^10.0.0",
    "ajv": ">=7.0.0-beta.7"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@commitlint/prompt": "^11.0.0",
    "@koa/router": "^10.0.0",
    "@parisholley/inversify-async": "^1.1.7",
    "@types/body-parser": "^1.16.5",
    "@types/chai": "4.2.14",
    "@types/chai-subset": "1.3.3",
    "@types/koa": "^2.11.6",
    "@types/koa__router": "^8.0.3",
    "@types/mocha": "8.0.4",
    "@types/node": "12.7.0",
    "@types/supertest": "^2.0.3",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "ajv": "^7.0.0-beta.7",
    "chai": "4.2.0",
    "chai-subset": "1.6.0",
    "commitizen": "^4.2.2",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.13.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "koa": "^2.13.0",
    "koa-bodyparser": "^4.3.0",
    "lint-staged": "^10.5.1",
    "mocha": "8.2.1",
    "nyc": "15.1.0",
    "prettier": "^2.1.2",
    "reflect-metadata": "^0.1.13",
    "supertest": "^3.0.0",
    "supertest-as-promised": "^4.0.2",
    "ts-node": "9.0.0",
    "typedoc": "0.15.0",
    "typescript": "^4.0.2"
  }
}
