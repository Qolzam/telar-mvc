{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "pretty": true,
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "suppressImplicitAnyIndexErrors": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "inlineSourceMap": true,
    "outDir": "dist",
    "lib": [
      "es2017",
      "dom"
    ],
    "typeRoots": ["node_modules/@types"],
    "types": [
      "node",
      "mocha",
      "chai",
      "reflect-metadata",
      "chai-subset"
    ],
    "removeComments": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "./tests/",
    "./node_modules/",
    "./dist/"
  ]
}
